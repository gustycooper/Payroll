<GridPane alignment="center" hgap="10" vgap="10" xmlns="http://javafx.com/javafx/8.0.111" xmlns:fx="http://javafx.com/fxml/1" fx:controller="payroll.Controller">
   <columnConstraints>
      <ColumnConstraints />
   </columnConstraints>
   <rowConstraints>
      <RowConstraints />
   </rowConstraints>
   <children>
      <TabPane prefHeight="612.0" prefWidth="512.0" tabClosingPolicy="UNAVAILABLE">
        <tabs>
          <Tab text="Pay Roll">
            <content>
              <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="552.0" prefWidth="475.0">
                     <children>
                        <Label layoutX="26.0" layoutY="26.0" text="Employee" />
                        <TextField fx:id="employeeTextField" layoutX="96.0" layoutY="21.0" prefHeight="28.0" prefWidth="314.0" />
                        <Button fx:id="viewButton" layoutX="435.0" layoutY="22.0" mnemonicParsing="false" onAction="#handleViewButton" text="View" />
                        <Label layoutX="360.0" layoutY="65.0" text="Pay Date" />
                        <TextField fx:id="payDateTextField" layoutX="232.0" layoutY="60.0" prefHeight="28.0" prefWidth="120.0" />
                        <Label layoutX="27.0" layoutY="97.0" text="Start Date" />
                        <TextField fx:id="startDate" layoutX="97.0" layoutY="93.0" prefHeight="28.0" prefWidth="123.0" />
                        <Label layoutX="361.0" layoutY="98.0" text="End Date" />
                        <TextField fx:id="endDate" layoutX="232.0" layoutY="92.0" prefHeight="28.0" prefWidth="123.0" />
                        <TextField fx:id="hoursTextField" layoutX="97.0" layoutY="60.0" prefHeight="28.0" prefWidth="123.0" />
                        <Label layoutX="52.0" layoutY="66.0" text="Hours" />
                        <Button fx:id="enterButton" layoutX="433.0" layoutY="75.0" mnemonicParsing="false" onAction="#handleEnterButton" text="Enter" />
                        <TextArea fx:id="payRollTextArea" layoutX="33.0" layoutY="144.0" prefHeight="398.0" prefWidth="446.0" />
                     </children>
                  </AnchorPane>
            </content>
          </Tab>
          <Tab text="Future">
            <content>
              <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="180.0" prefWidth="200.0" />
            </content>
          </Tab>
        </tabs>
      </TabPane>
   </children>
</GridPane>
